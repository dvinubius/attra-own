    "read-price-feed": "yarn workspace @scaffold-eth/hardhat hardhat read-price-feed",
    "fund-link": "yarn workspace @scaffold-eth/hardhat hardhat fund-link",
    "request-data": "yarn workspace @scaffold-eth/hardhat hardhat request-data",
    "read-data": "yarn workspace @scaffold-eth/hardhat hardhat read-data",
